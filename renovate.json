{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^bin/download-periphery$"
      ],
      "matchStrings": [
        "VERSION\\s*=\\s*['\"](?<currentValue>.*)['\"]\\s*\n"
      ],
      "depNameTemplate": "peripheryapp/periphery",
      "datasourceTemplate": "github-releases"
    }
  ]
}
